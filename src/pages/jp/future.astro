    const previewTitles = document.querySelectorAll(".future-section__preview");

    previewTitles.forEach((title) => {
      title.addEventListener("click", () => {
        const preview = title.closest(".future-section__preview");
        const content = preview.nextElementSibling;
        const parent = preview.parentElement;

        if (!content) return;

        const initialHeight = parent.offsetHeight;

        gsap.set(content, { display: "block" });
        const contentHeight = content.offsetHeight;

        gsap.set(content, { display: "none" });
        gsap.to(window, {
          ease: "power2.out",
          duration: 1,
          scrollTo: title,
        }),
          gsap.to(title, {
            duration: 2,
            opacity: 0,
            height: 0,
            onComplete: () => {
              preview.style.display = "none";
              ScrollTrigger.refresh();
            },
          });

        gsap.to(parent, {
          duration: 2,
          height: contentHeight,
          ease: "power2.out",
          onComplete: () => {
            parent.style.height = "auto";
            if (parent.classList.contains("future-section--magazine")) {
              const sliderImg = document.querySelector(
                ".future-mag__slider-media"
              );
              const magVideos = document.querySelectorAll(
                ".future-mag__ar-media"
              );

              const imageWidth = sliderImg.offsetWidth;
              const windowWidth = window.innerWidth;
              const scrollDistance = imageWidth - windowWidth;

              gsap.to(sliderImg, {
                x: -scrollDistance,
                ease: "none",
                scrollTrigger: {
                  trigger: sliderImg,
                  start: "bottom bottom",
                  end: `top top`,
                  scrub: 100,
                  // pin: true,
                },
              });
              magVideos.forEach((video) => video.play());
            }
          },
        });

        gsap.set(content, { display: "block", opacity: 0 });
        gsap.to(content, {
          duration: 2,
          opacity: 1,
          scale: 1,
          ease: "power2.out",
        });
      });
    });
