<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  let pageTopTl = new gsap.timeline({
    onComplete: () =>
      document.querySelector(".main-sections__top-video").play(),
  });
  pageTopTl
    .to(".main-section__title", 0.6, {
      clipPath: "polygon(0 100%, 100% 100%, 100% 0, 0 0)",
    })
    .to(
      ".main-section__sub",
      0.4,
      { clipPath: "polygon(0 100%, 100% 100%, 100% 0, 0 0)" },
      "-=0.2"
    )
    .to(
      ".main-section__descr-text",
      0.4,
      { clipPath: "polygon(0 100%, 100% 100%, 100% 0, 0 0)" },
      "-=0.2"
    )
    .to(
      ".main-section__descr-btn",
      0.4,
      { clipPath: "polygon(0 100%, 100% 100%, 100% 0, 0 0)" },
      "-=0.2"
    );
  const pauseAllVideos = () => {
    const videos = document.querySelectorAll(
      "video:not(.main-sections__top-video)"
    );
    videos.forEach((video) => {
      video.pause();
    });
  };

  let panels = gsap.utils.toArray(".main-sections__item"),
    observer = ScrollTrigger.normalizeScroll(true),
    scrollTween;

  document.addEventListener(
    "touchstart",
    (e) => {
      if (scrollTween) {
        e.preventDefault();
        e.stopImmediatePropagation();
      }
    },
    { capture: true, passive: false }
  );

  let tops = panels.map((panel) =>
    ScrollTrigger.create({ trigger: panel, start: "top top" })
  );
  ScrollTrigger.create({
    snap: {
      snapTo: (progress, self) => {
        let panelStarts = tops.map((st) => st.start),
          snapScroll = gsap.utils.snap(panelStarts, self.scroll());

        return gsap.utils.normalize(
          0,
          ScrollTrigger.maxScroll(window),
          snapScroll
        );
      },
      onComplete: () => {
        const currentYpos = window.pageYOffset;
        panels.forEach(async (panel) => {
          await pauseAllVideos();
          console.log(panel.parentNode.offsetTop, currentYpos);
          
          if (Math.abs(panel.parentNode.offsetTop - currentYpos) < 130) {
